extends ../layout/index

block contenido
   main.container.mt-5
        h1.text-center.mb-5 #{pagina}



        .row
            .col-md-12
                include ../layout/partials/testimoniales
            .col-md-12
                h2.text-center Agrega un testimonial
                if(errores)
                    each error in errores         
                        .alert.alert-danger.text-center=error.mensaje


                .row.justify-content-center
                    .col-md-8
                        form(action='/testimoniales', method='POST')
                            .form-group
                                label(form='nombre') Nombre
                                input( id='nombre',class='form-control' type='text',placeholder='Tu nombre', name='nombre', value=nombre)  
                            .form-group
                                label(form='correo') Correo electronico 
                                input( id='correo',class='form-control' type='email',placeholder='Tu correo', name='correo', value=correo)  
                            .form-group
                                label(form='mensaje') Mensaje 
                                textarea#mensaje(name="mensaje", rows="3"
                                placeholder='tu mensaje' class='form-control')=mensaje
                            input.btn.btn-success.btn-block(type="submit", value='Agregar')